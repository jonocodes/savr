{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "sourceMap": true,
        "outDir": "./dist",
        "declaration": false,
        "jsx": "preserve",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "types": [
            "chrome"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}