{
    "manifest_version": 2,
    "name": "HTML Data Collector",
    "version": "1.0",
    "description": "Collects HTML data from the current page and displays it in a scrollable popup",
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://localhost:3000/*"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "HTML Data Collector"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://localhost:3000/submit*"
            ],
            "js": [
                "savr-content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "icons/icon.svg",
        "32": "icons/icon.svg",
        "48": "icons/icon.svg",
        "128": "icons/icon.svg"
    }
}